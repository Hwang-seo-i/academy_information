<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="detail_item_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>
<!--    탭바 text 설정-->
    <style name="tabTextSizeBold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
<!--    상단탭 스타일-->
    <style name="tapStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">#808080</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>
</resources>